{
  "name": "sship",
  "version": "0.4.0",
  "description": "The ultimate SSH companion tool with built-in Synergy (SFTP) file transfer.",
  "type": "module",
  "private": false,
  "bin": {
    "sship": "dist/index.js"
  },
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target=node --external ssh2 --external ssh2-sftp-client && mkdir -p dist/public && cp src/transfer/public/* dist/public/"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/ssh2-sftp-client": "^9.0.6",
    "prettier": "^3.6.2"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@inquirer/core": "^10.1.14",
    "@inquirer/prompts": "^7.6.0",
    "@types/commander": "^2.12.5",
    "commander": "^14.0.0",
    "ora": "^8.2.0",
    "ssh2-sftp-client": "^12.0.1"
  },
  "os": [
    "linux",
    "darwin"
  ],
  "files": [
    "dist",
    "scripts"
  ],
  "author": {
    "email": "superdevmaks@gmail.com",
    "name": "Makumi John Mutua",
    "url": "https://github.com/Makumiii"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Makumiii/sship.git"
  }
}
